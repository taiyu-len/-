[core]
	editor = vim
	excludesfile = ~/.config/git/ignore
[user]
	name = taiyu
[include] ; User data i dont want to upload
	path = user
[pager]
	branch = false
	stat = false
	dirstat = false
[status]
	short = true
	branch = true
[diff]
	algorithm = patience
[color]
	ui = true
[alias]
	graph   = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %s %C(dim white)%an%C(reset)%C(bold yellow)%d%C(reset)' --all
	stat    = diff --stat
	dirstat = diff --dirstat
	todo    = grep TODO
[commit]
	verbose = 1
	gpgsign = true
[sendemail]
	smtpEncryption = tls
	smtpServer =  smtp.gmail.com
	smtpServerPort = 587
	suppresscc = self
